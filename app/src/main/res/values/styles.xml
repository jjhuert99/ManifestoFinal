<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="big_m_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/modern_regular</item>
        <item name="android:textColor">@color/manifesto_yellow</item>
        <item name="android:textSize">44sp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="manifesto_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="city_backdrop_stretched">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="home_screen_messege">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="sign_in_button_yellow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/manifesto_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:paddingHorizontal">50dp</item>
    </style>

    <style name="white_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="save_and_sign_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="guest_name_rv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="action_icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
